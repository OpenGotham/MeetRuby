	    <ul class="field-list">
	      <li class="field-item">
	        <span class="field-item-input"><input type="text" id="book-search-field" class="search empty"></span>
	      </li>
	      <li class="field-item">
	        <input type="button" id="search-bar-holmes-button" class="search-options" value="Book Search">
	      </li>
	    </ul>
	  </fieldset>
	</div>    
	<div class="book_result_list_container"></div>
      
	<br/>
    
		<h1>New book</h1><%= render 'form' %>
