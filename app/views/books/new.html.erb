    }

		function selectBook(book_id){
			$.get('/books/find?add_book=true&book_id=' + book_id, function(data){
				$("#add_book").html(data).fadeIn("fast");
			}
			);
		}
		function gSearch(){
		  var query = encodeURI($('#book-search-field').val());
		  $.get('/books/find?query=' + query, function(data){
			  $(".book_result_list_container").html(data).fadeIn("fast");
			  $(".scrollable").scrollable();
		  });
		}
    $('#search-bar-holmes-button').live('click', function(e){
      gSearch();
    })
    $('#book-search-field').keyup(function(event) {
      if (event.keyCode == '13') {
			  gSearch();
      }
    });
</script>
