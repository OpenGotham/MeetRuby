             <div class="common_feature"></div>
      </div>
       <div>
        <!-- 4-8 -->
             <div class="common_feature"></div>
             <div class="common_feature"></div>
             <div class="common_feature"></div>
             <div class="common_feature"></div>
      </div>
    </div>
  </div>
  <!-- "next page" action -->
  <a class="next browse right"></a>
  </div>
  <div id="sortable-books" class="content-scroll">
  
   <h1>Listing books</h1>

   <table>
     <tr>
       <th>Title</th>
       <th>Edition</th>
       <th>Description</th>
       <th>Print date</th>
       
       <th>Publisher</th>
     </tr>

   <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.edition %></td>
       
       <td><%= book.print_date %></td>
       
       <td><%= book.publisher %></td>
       <td><%= link_to 'Show', book %></td>
       <td><%= link_to 'Edit', edit_book_path(book) %></td>
       <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
     </tr>
   <% end %>
   </table>

   <br />

   <%= link_to 'New Book', new_book_path %>
