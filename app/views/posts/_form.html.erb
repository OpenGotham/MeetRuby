<% content_for :head do %>
  <%= javascript_include_tag "tiny_mce/tiny_mce.js" %>
  
  
  <script type="text/javascript">
		tinyMCE.init({
			// General options
			mode : "textareas",
			theme : "advanced",
			plugins : "safari,advlink,paste",
			
			
				theme_advanced_buttons1 : "bold,italic,underline,strikethrough,|,paste,|,bullist,numlist,|,outdent,indent,|,undo,redo",
				
				theme_advanced_buttons2 : "",
  			theme_advanced_toolbar_location : "top",
  			theme_advanced_toolbar_align : "left",
  			theme_advanced_statusbar_location : "bottom",
  			theme_advanced_resizing : true,
  			width : 600,
  			height: 400
  		});
  		
  		
  			</script>
  			<% end %>
  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
    <div id="errorExplanation">
      <h2>
        <%= pluralize(@post.errors.count, "error") %> 
        prohibited this post from being saved:
      </h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
      </ul>
    </div>
    <% end %>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
