<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>author</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title.blank? ? '' : post.title.html_safe  %></td>
    <td><%= post.author.html_safe %></td>
    <td><%= link_to 'Show', post.source.resourceful %></td>
    <td><%= link_to 'Edit', edit_source_path(post.source) %></td>
    <td><%= link_to 'Destroy', post.source, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

